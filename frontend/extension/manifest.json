{
  "manifest_version": 3,
  "name": "AgentPlay - YT Enhancer",
  "version": "1.0",
  "description": "Fetches transcript data from an ongoing youtube video in the current tab",
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
